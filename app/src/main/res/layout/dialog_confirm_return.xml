<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android = "http://schemas.android.com/apk/res/android"
              android:layout_width = "match_parent"
              android:layout_height = "match_parent"
              android:layout_margin = "16dp"
              android:orientation = "vertical">

    <TextView
        android:id = "@+id/dialog_return_name"
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        android:layout_gravity = "center_horizontal"
        android:text = "Name"
        android:textSize = "20sp" />

    <TextView
        android:id = "@+id/dialog_return_time"
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        android:layout_gravity = "center_horizontal"
        android:text = "Time"
        android:textSize = "20sp" />

    <TextView
        android:id = "@+id/dialog_return_amount"
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        android:layout_gravity = "center_horizontal"
        android:text = "Amount"
        android:textSize = "20sp" />

    <LinearLayout
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        android:layout_margin="16dp"
        android:layout_gravity="center_horizontal"
        android:padding="16dp"
        android:orientation = "horizontal">

        <Button
            android:id = "@+id/dialog_return_button_yes"
            android:layout_width = "0dp"
            android:layout_height = "wrap_content"
            android:layout_gravity = "left"
            android:layout_weight="0.5"
            android:onClick="confirmReturnYesClicked"
            android:layout_margin="16dp"
            android:background = "@color/primary"
            android:text = "Yes" />

        <Button
            android:id = "@+id/dialog_return_button_no"
            android:layout_width = "0dp"
            android:layout_height = "wrap_content"
            android:layout_weight="0.5"
            android:onClick="confirmReturnNoClicked"
            android:layout_margin="16dp"
            android:layout_gravity = "right"
            android:background = "@color/primary"
            android:text = "No" />
    </LinearLayout>

</LinearLayout>